
<main>

  <div class='row left-align trail-main-content'>

    <div class="col s6 trail-main-video">
      <iframe class="responsive-video" id="ytplayer" type="text/html" width="750" height="420"
      src="<%= trail.video %>"
      frameborder="0" allowfullscreen></iframe>
    </div>


    <div class="col s6 left-align trailtext trail-content">
      <h1><%= trail.title %></h1>
      <h2><%= trail.subtitle %></h2>
      <div class="row">
        <div class="col s6 trailtext">
            <p class="trailtextbold">Trail Start:</p>
            <p><%= trail.startLat %> lat , <%= trail.startLng %> lng </p>
        </div>
        <div class="col s6 trailtext">
            <p class="trailtextbold">Trail End:</p>
            <p><%= trail.endLat %> lat , <%= trail.endLng %> lng </p>
        </div>
        <div class="col s6 trailtext">
            <p class="trailtextbold">Source Guide for <%= trail.title %></p>
            <a class="btn btn-source" href="<%= trail.sourceURL %>" target="_blank">READ MORE</a>
        </div>
        <div class="col s6">
          <p class="trailtextbold">Add trail to your favorites!</p>
          <a class="btn btn-favorite" href="/favorite-trails/<%= trail.id %>/<%= trail.title %>"><i class="material-icons left">favorites</i>FAVORITE</a>
        </div>
      </div>

    </div>
</div>

<div class="row">
    <div id="map" class="col s12"></div>
</div>


