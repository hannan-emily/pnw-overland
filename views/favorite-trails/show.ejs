<main>



  <div class="row">



    <div class="col s8">
      <div class="h1-uppercase h1-favorite grey-text text-darken-1 left-align">
        <h1>Welcome&ensp;<%= currentUser.name %>&ensp;to your favorite trails</h1>
      </div>
      <table>
              <thead>
                <tr class="trailtextbold col s12">
                    <th class="col s4">FAVORITE TRAIL</th>
                    <th class="col s4">NOTES</th>
                    <th class="col s4">ACTION</th>
                </tr>
              </thead>

              <tbody>
                <% favoritesObject.forEach(function(favorite) { %>
                <tr class="row-content col s12">
                  <td class="col s4"><%= favorite.title %></td>
                  <td class="table-overflow-note col s4"><%= favorite.note %></td>
                  <td class="col s4"><a class="btn-favorite delete" href="/favorite-trails/<%= favorite.id %>">DELETE FAVORITE</a></td>
                </tr>
                <% }); %>
                </tr>
              </tbody>
            </table>
    </div>

    <div class="col s4">
      <img class="responsive-img" src="https://expeditionportal.com/media/2017/03/d2g_ARB_Grey_Creek_Pass-2-2000x1333.jpeg">
      <p class="img-text">Source: expeditionportal.com</p>
      <img class="responsive-img" src="https://expeditionportal.com/media/2017/03/d2g_ARB_Grey_Creek_Pass-10-2000x1333.jpeg">
      <p class="img-text">Source: expeditionportal.com</p>
    </div>

</div>
    <% favoritesObject.forEach(function(favorite) { %>
<div class="row"
        <li>
          <%= favorite.title %>
          <%= favorite.note %>
          <a class="waves-effect waves-light btn modal-trigger" href="#noteModal">Add Note</a>
          <a class="waves-effect  btn-flat delete" href="/favorite-trails/<%= favorite.id %>">Delete</a>
        </li>

  <div id="noteModal" class="modal">
      <div class="modal-content">
        <form action="/favorite-trails/<%= favorite.trailId %>/note">

              <div class="form-group">
                <label for="note">note</label>
                <input type="text" class="form-control" id="note" name="note" value="<%= favorite.trailId.note %>">
              </div>

      </div>

          <div class="modal-footer">
            <a href="/favorite-trails/<%= favorite.trailId %>/note" class="modal-action modal-close waves-effect waves-green btn-flat edit">Add Note</a>
            <a href="/favorite-trails/<%= favorite.trailId %>/note" class="modal-action modal-close waves-effect waves-green btn-flat edit">Edit Note</a>
          </div>

      </form>
    </div>
</div>
  <% }); %>

</main>

<script src="//code.jquery.com/jquery.js"></script>

<script>
  $(document).ready(function(){
    $('.modal').modal();
   });
</script>
