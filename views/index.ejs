<main>

  <div id="index-banner" class="header-video-text">
      <div class="header-text no-pad-bot">
          <h1 class="header center white-text header-h1">PNW Overland Adventures</h1>
          <div class="row center">
            <h5 class="header col s12 white-text header-h5">Your interactive guide to backcountry road adventures in the Pacific Northwest</h5>
          </div>
      </div>

      <div class="header-overlay col s12">
      </div>

      <div class="responsive-video col s12">
        <iframe width="1440" height="810" src="https://www.youtube.com/embed/2xkkLLc3y5M?rel=0&amp;controls=0&amp;showinfo=0&autoplay=1&loop=1&mute=1&playlist=2xkkLLc3y5M" frameborder="0" allowfullscreen></iframe>
      </div>
  </div>

  <% trail.forEach(function(trail) { %>
    <div class="row">
      <div class="col s6 center-align">
        <h1><%= trail.title %></h1>
        <h2><%= trail.subtitle %></h2>
      </div>
      <div id="video" class="trail-video col s6">
        <iframe id="ytplayer" type="text/html" width="650" height="366"
        src="<%= trail.video %>&controls=0"
        frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  <% }); %>



</main>
